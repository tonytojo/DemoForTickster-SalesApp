    <script src="~/fontawesome/js/all.min.js" crossorigin="anonymous"></script>
    <style>
        .react-tabs {
            -webkit-tap-highlight-color: transparent;
        }

        .react-tabs__tab-list {
            border-bottom: 1px solid #aaa;
            margin: 0 0 10px;
            padding: 0;
        }

        .react-tabs__tab {
            display: inline-block;
            border: 1px solid transparent;
            border-bottom: none;
            bottom: -1px;
            position: relative;
            list-style: none;
            padding: 6px 12px;
            cursor: pointer;
        }

        .react-tabs__tab--selected {
            background: #fff;
            border-color: #aaa;
            color: black;
            border-radius: 5px 5px 0 0;
        }

        .react-tabs__tab--disabled {
            color: GrayText;
            cursor: default;
        }

        .react-tabs__tab:focus {
            box-shadow: 0 0 5px hsl(208, 99%, 50%);
            border-color: hsl(208, 99%, 50%);
            outline: none;
        }

            .react-tabs__tab:focus:after {
                content: "";
                position: absolute;
                height: 5px;
                left: -4px;
                right: -4px;
                bottom: -5px;
                background: #fff;
            }

        .react-tabs__tab-panel {
            display: none;
        }

        .react-tabs__tab-panel--selected {
            display: block;
        }

        .clickableSearch:hover {
            background-color: lightgray;
        }

        .dropzone {
            border: 2px dashed #cccccc;
            border-radius: 4px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            width: 100%;
            height: 50px;
            background-color: white;
        }

        /* Add styles to the content inside Dropzone */
        .dropzone-content {
            border: 2px dashed #cccccc;
            border-radius: 4px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            width: 100%;
            height: 50px;
            background-color: white;
        }

        /* Style the text */
        .dropzone-content p {
            font-size: 16px;
            color: #555;
        }

        /* Style the border when hovering over Dropzone */
        .dropzone:hover {
            border-color: #007bff;
        }

        thead {
            position: sticky; /* make the table heads sticky */
            top: 0px; /* table head will be placed from the top of the table and sticks to it */
        }

        table {
            border-collapse: collapse; /* make the table borders collapse to each other */
            width: 100%;
        }

        .pagination li{
            margin-left: 10px;
            cursor: pointer;
        }

        .pagination li a{
            color: gray;
        }

        .pagination .active a {
            color: black;
        }

/*        .file-input-label {
